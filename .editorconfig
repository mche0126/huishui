root = true

[*.{js,jsx,ts,tsx,vue}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{diff,md}]
max_line_length = 0
trim_trailing_whitespace = false

[*.{txt,css,html,php,py,json,yml,sass,pug,scss}]
indent_style = tab
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0